<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='stylesheet' href='css/style.css' />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x'
      crossorigin='anonymous'
    />
    <title>Document</title>

  </head>
  <body>
    <h2>PORTFOLIO FORM</h2>
    <form action='/createPortfolio' method='POST'>
      <div class='mb-3'>
        <label class='form-label'>ID(PRIMARY ID)</label>
        <input type='text' class='form-control' name='id' />
      </div>
      <div class='mb-3'>
        <label class='form-label'>Portfolio Name</label>
        <input type='text' class='form-control' name='portfolio' />
      </div>
      <div class='mb-3 form-check'>
        <input type='checkbox' class='form-check-input' name='status' />
        <label class='form-check-label'>Status</label>
      </div>
      <div class='mb-3'>
        <label class='form-label'>Type</label>
        <input type='number' class='form-control' name='type' />
      </div>
      <div class='mb-3'>
        <label class='form-label'>Parent Id</label>
        <input type='text' class='form-control' name='parent_id' />
      </div>
      <div class='mb-3'>
        <label class='form-label'>Valid To</label>
        <input type='date' class='form-control' name='valid_to' />
      </div>
      <div class='mb-3'>
        <label class='form-label'>Valid From</label>
        <input type='date' class='form-control' name='valid_from' />
      </div>
      <div class='mb-3'>
        <label class='form-label'>Created By:</label>
        <input type='text' class='form-control' name='created_by' />
      </div>
      <div class='mb-3'>
        <label class='form-label'>Modified By:</label>
        <input type='text' class='form-control' name='modified_by' />
      </div>
      <div class='mb-3'>
        <label class='form-label'>Created Date</label>
        <input type='date' class='form-control' name='created_date' />
      </div>
      <div class='mb-3'>
        <label class='form-label'>Modified Date</label>
        <input type='date' class='form-control' name='modified_date' />
      </div>

      <div class='mb-3'>
        <label class='form-label'>Certificate Id</label>
        <input type='text' class='form-control' name='certificate_id' />
      </div>
      <div class='mb-3'>
        <label class='form-label'>Control Id</label>
        <input type='text' class='form-control' name='controls_id' />
      </div>
      <div class='mb-3'>
        <label class='form-label'>Customer Id</label>
        <input type='text' class='form-control' name='customer_id' />
      </div>
      <div class='mb-3'>
        <label class='form-label'>Policy Id</label>
        <input type='text' class='form-control' name='policy_id' />
      </div>

      <button type='submit' class='btn btn-primary'>Submit</button>
    </form>
  </body>
</html>